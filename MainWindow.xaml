<Window x:Class="TodoOverlayApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="待办软件配置" Height="450" Width="800">
    <Grid>
        <Label Content="关联软件路径:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtAppPath" HorizontalAlignment="Left" Height="23" Margin="120,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
        <Button Content="选择软件" HorizontalAlignment="Left" Margin="330,10,0,0" VerticalAlignment="Top" Width="75" Click="SelectAppButton_Click"/>
        <!-- 添加选择当前运行软件的按钮 -->
        <Button Content="选择当前运行软件" HorizontalAlignment="Left" Margin="420,10,0,0" VerticalAlignment="Top" Width="150" Click="SelectRunningAppButton_Click"/>

        <Label Content="待办内容:" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top"/>
        <ListView x:Name="todoListView" ItemsSource="{Binding _todoItems}" HorizontalAlignment="Left" Height="100" Margin="120,40,0,0" VerticalAlignment="Top" Width="200">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox IsChecked="{Binding IsCompleted}" VerticalAlignment="Center"/>
                        <TextBox Text="{Binding Content}" Width="150" Margin="5,0,0,0"/>
                        <Button Content="删除" Margin="5,0,0,0" Click="DeleteTodoItem_Click"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Content="添加待办" HorizontalAlignment="Left" Margin="330,40,0,0" VerticalAlignment="Top" Width="75" Click="AddTodoItem_Click"/>

        <Button Content="保存配置" HorizontalAlignment="Left" Margin="120,150,0,0" VerticalAlignment="Top" Width="75" Click="SaveConfigButton_Click"/>
        <Button Content="强制唤起" HorizontalAlignment="Left" Margin="210,150,0,0" VerticalAlignment="Top" Width="75" Click="ForceLaunchButton_Click"/>
    </Grid>
</Window>
