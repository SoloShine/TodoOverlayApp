<Window x:Class="TodoOverlayApp.Views.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="编辑待办事项" Height="200" Width="300">
    <Grid>
        <TextBox x:Name="txtEditContent" TextWrapping="Wrap" AcceptsReturn="True" Margin="10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10">
            <Button Content="保存" Click="SaveButton_Click"/>
            <Button Content="取消" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>