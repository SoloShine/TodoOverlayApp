<UserControl
    x:Class="TodoOverlayApp.Views.TodoTreeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:TodoOverlayApp.ViewModels"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800">
    <TreeView Margin="10" ItemsSource="{Binding Model.AppAssociations}">
        <TreeView.ItemContainerStyle>
            <Style TargetType="TreeViewItem">
                <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
            </Style>
        </TreeView.ItemContainerStyle>
        <TreeView.ItemTemplate>
            <HierarchicalDataTemplate ItemsSource="{Binding TodoItems}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="150" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        MaxWidth="400"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Text="{Binding AppName}"
                        ToolTip="{Binding AppPath}" />
                    <StackPanel
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <Menu>
                            <MenuItem Header="操作">
                                <MenuItem
                                    Command="{Binding DataContext.SelectRunningAppCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Header="选择已打开软件" />
                                <MenuItem
                                    Command="{Binding DataContext.SelectAppCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Header="选择软件" />
                                <MenuItem
                                    Command="{Binding DataContext.RemoveAppCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Header="删除" />
                            </MenuItem>
                        </Menu>

                        <Button
                            Margin="5,0,0,0"
                            Command="{Binding DataContext.AddTodoItemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            CommandParameter="{Binding}"
                            Content="添加待办" />
                    </StackPanel>
                </Grid>
                <!--  二级节点  -->
                <HierarchicalDataTemplate.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Orientation="Horizontal">
                                <CheckBox VerticalAlignment="Center" IsChecked="{Binding IsCompleted}" />
                                <TextBox
                                    Width="150"
                                    Margin="5,0,0,0"
                                    Text="{Binding Content}" />
                                <Button
                                    Margin="5,0,0,0"
                                    Command="{Binding DataContext.DeleteTodoItemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Content="删除" />
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </HierarchicalDataTemplate.ItemTemplate>
            </HierarchicalDataTemplate>
        </TreeView.ItemTemplate>
    </TreeView>
</UserControl>
