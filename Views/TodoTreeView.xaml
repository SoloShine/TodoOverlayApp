<UserControl
    x:Class="TodoOverlayApp.Views.TodoTreeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:TodoOverlayApp.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:TodoOverlayApp.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="Transparent"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:StringNotEmptyConverter x:Key="StringNotEmptyConverter" />
    </UserControl.Resources>
    <TreeView
        Margin="10"
        Background="Transparent"
        ItemsSource="{Binding Model.AppAssociations}">
        <TreeView.ItemContainerStyle>
            <Style TargetType="TreeViewItem">
                <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
                <Setter Property="Padding" Value="2,5" />
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="BorderThickness" Value="0" />
                <Style.Triggers>
                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="Background" Value="#F0F0F0" />
                        <Setter Property="BorderBrush" Value="#E0E0E0" />
                        <Setter Property="BorderThickness" Value="0" />
                    </Trigger>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#F5F5F5" />
                    </Trigger>
                </Style.Triggers>
            </Style>
        </TreeView.ItemContainerStyle>
        <TreeView.ItemTemplate>
            <HierarchicalDataTemplate ItemsSource="{Binding TodoItems}">
                <Border>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.8*" />
                            <ColumnDefinition Width="0.2*" />
                        </Grid.ColumnDefinitions>
                        <Border BorderBrush="{StaticResource PrimaryTextBrush}" BorderThickness="0,0,0,1">
                            <TextBlock
                                Margin="5,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Text="{Binding AppName}"
                                TextTrimming="CharacterEllipsis"
                                ToolTip="{Binding AppPath}" />
                        </Border>
                        <StackPanel
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                            <Menu>
                                <MenuItem Header="操作">
                                    <MenuItem
                                        Command="{Binding DataContext.SelectRunningAppCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        Header="选择已打开软件" />
                                    <MenuItem
                                        Command="{Binding DataContext.SelectAppCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        Header="选择软件" />
                                    <MenuItem
                                        Command="{Binding DataContext.RemoveAppCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        Header="删除" />
                                </MenuItem>
                            </Menu>

                            <Button
                                Margin="5,0,0,0"
                                Command="{Binding DataContext.AddTodoItemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding}"
                                Content="添加待办"
                                IsEnabled="{Binding AppName, Converter={StaticResource StringNotEmptyConverter}}" />
                        </StackPanel>
                    </Grid>
                </Border>
                <!--  二级节点  -->
                <HierarchicalDataTemplate.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Orientation="Horizontal">
                                <CheckBox VerticalAlignment="Center" IsChecked="{Binding IsCompleted}" />
                                <TextBox
                                    Width="150"
                                    Margin="5,0,0,0"
                                    BorderBrush="{StaticResource PrimaryTextBrush}"
                                    BorderThickness="0,0,0,1"
                                    Text="{Binding Content}" />
                                <Button
                                    Margin="5,0,0,0"
                                    Command="{Binding DataContext.DeleteTodoItemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Content="删除" />
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </HierarchicalDataTemplate.ItemTemplate>
            </HierarchicalDataTemplate>
        </TreeView.ItemTemplate>
    </TreeView>
</UserControl>
