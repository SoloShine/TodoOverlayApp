<hc:Window
    x:Class="TodoOverlayApp.Views.ThemeSettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="主题配置"
    Width="400"
    Height="500"
    Background="{DynamicResource RegionBrush}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <hc:Window.Resources>
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="0,0,0,10" />
        </Style>
    </hc:Window.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  应用主题部分  -->
            <TextBlock
                Grid.Row="0"
                Style="{StaticResource SectionHeaderStyle}"
                Text="应用主题" />

            <StackPanel Grid.Row="1" Margin="0,0,0,20">
                <TextBlock Margin="0,0,0,5" Text="选择主题：" />
                <ComboBox
                    x:Name="ThemeComboBox"
                    SelectedIndex="0"
                    SelectionChanged="ThemeComboBox_SelectionChanged">
                    <ComboBoxItem Content="浅色主题" />
                    <ComboBoxItem Content="深色主题" />
                </ComboBox>
            </StackPanel>

            <!--  主题颜色部分  -->
            <TextBlock
                Grid.Row="2"
                Style="{StaticResource SectionHeaderStyle}"
                Text="主题颜色" />

            <WrapPanel
                x:Name="ColorsPanel"
                Grid.Row="3"
                Margin="0,0,0,20">
                <!--  预定义的颜色选择器  -->
                <RadioButton
                    Margin="5"
                    Background="#2196F3"
                    BorderBrush="#2196F3"
                    Checked="ColorRadioButton_Checked"
                    Foreground="#2196F3"
                    GroupName="ThemeColors"
                    Style="{StaticResource RadioButtonIcon}"
                    Tag="#2196F3" />
                <RadioButton
                    Margin="5"
                    Background="#4CAF50"
                    BorderBrush="#4CAF50"
                    Checked="ColorRadioButton_Checked"
                    Foreground="#4CAF50"
                    GroupName="ThemeColors"
                    Style="{StaticResource RadioButtonIcon}"
                    Tag="#4CAF50" />
                <RadioButton
                    Margin="5"
                    Background="#FF5722"
                    BorderBrush="#FF5722"
                    Checked="ColorRadioButton_Checked"
                    Foreground="#FF5722"
                    GroupName="ThemeColors"
                    Style="{StaticResource RadioButtonIcon}"
                    Tag="#FF5722" />
                <RadioButton
                    Margin="5"
                    Background="#9C27B0"
                    BorderBrush="#9C27B0"
                    Checked="ColorRadioButton_Checked"
                    Foreground="#9C27B0"
                    GroupName="ThemeColors"
                    Style="{StaticResource RadioButtonIcon}"
                    Tag="#9C27B0" />
                <RadioButton
                    Margin="5"
                    Background="#FF9800"
                    BorderBrush="#FF9800"
                    Checked="ColorRadioButton_Checked"
                    Foreground="#FF9800"
                    GroupName="ThemeColors"
                    Style="{StaticResource RadioButtonIcon}"
                    Tag="#FF9800" />
                <!--  添加主题颜色的自定义按钮  -->
                <Button
                    x:Name="CustomThemeColorButton"
                    Margin="5"
                    Padding="5,3"
                    Click="CustomThemeColorButton_Click"
                    Content="自定义..." />
            </WrapPanel>

            <!--  悬浮窗设置部分  -->
            <TextBlock
                Grid.Row="4"
                Style="{StaticResource SectionHeaderStyle}"
                Text="悬浮窗设置" />

            <!--  悬浮窗背景颜色  -->
            <StackPanel Grid.Row="5" Margin="0,0,0,10">
                <TextBlock Margin="0,0,0,5" Text="背景颜色：" />
                <WrapPanel x:Name="OverlayColorsPanel">
                    <RadioButton
                        Margin="5"
                        Background="#D3D3D3"
                        BorderBrush="#D3D3D3"
                        Checked="OverlayColorRadioButton_Checked"
                        Foreground="#D3D3D3"
                        GroupName="OverlayColors"
                        Style="{StaticResource RadioButtonIcon}"
                        Tag="#D3D3D3" />
                    <RadioButton
                        Margin="5"
                        Background="#FFFFFF"
                        BorderBrush="#CCCCCC"
                        Checked="OverlayColorRadioButton_Checked"
                        Foreground="#FFFFFF"
                        GroupName="OverlayColors"
                        Style="{StaticResource RadioButtonIcon}"
                        Tag="#FFFFFF" />
                    <RadioButton
                        Margin="5"
                        Background="#F0F0F0"
                        BorderBrush="#F0F0F0"
                        Checked="OverlayColorRadioButton_Checked"
                        Foreground="#F0F0F0"
                        GroupName="OverlayColors"
                        Style="{StaticResource RadioButtonIcon}"
                        Tag="#F0F0F0" />
                    <RadioButton
                        Margin="5"
                        Background="#E0E0E0"
                        BorderBrush="#E0E0E0"
                        Checked="OverlayColorRadioButton_Checked"
                        Foreground="#E0E0E0"
                        GroupName="OverlayColors"
                        Style="{StaticResource RadioButtonIcon}"
                        Tag="#E0E0E0" />
                    <RadioButton
                        Margin="5"
                        Background="#000000"
                        BorderBrush="#000000"
                        Checked="OverlayColorRadioButton_Checked"
                        Foreground="#000000"
                        GroupName="OverlayColors"
                        Style="{StaticResource RadioButtonIcon}"
                        Tag="#000000" />
                    <Button
                        x:Name="CustomColorButton"
                        Margin="5"
                        Padding="5,3"
                        Click="CustomColorButton_Click"
                        Content="自定义..." />
                </WrapPanel>
            </StackPanel>

            <!--  悬浮窗不透明度  -->
            <StackPanel Grid.Row="6" Margin="0,10,0,20">
                <TextBlock Margin="0,0,0,5" Text="不透明度：" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="60" />
                    </Grid.ColumnDefinitions>
                    <Slider
                        x:Name="OpacitySlider"
                        IsSnapToTickEnabled="True"
                        Maximum="1.0"
                        Minimum="0.1"
                        TickFrequency="0.1"
                        ValueChanged="OpacitySlider_ValueChanged"
                        Value="0.3" />
                    <TextBlock
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Text="{Binding ElementName=OpacitySlider, Path=Value, StringFormat={}{0:P0}}" />
                </Grid>
            </StackPanel>

            <!--  预览部分  -->
            <TextBlock
                Grid.Row="7"
                Style="{StaticResource SectionHeaderStyle}"
                Text="预览" />

            <Border
                x:Name="PreviewBorder"
                Grid.Row="8"
                Height="100"
                Margin="0,0,0,20"
                Background="LightGray"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                CornerRadius="10"
                Opacity="0.3">
                <DockPanel>
                    <Label
                        HorizontalAlignment="Left"
                        Content="待办事项预览"
                        DockPanel.Dock="Top" />
                    <TextBlock
                        Margin="20,5"
                        VerticalAlignment="Center"
                        DockPanel.Dock="Bottom"
                        Text="● 这是一个示例待办项" />
                </DockPanel>
            </Border>

            <!--  确定按钮  -->
            <Button
                Grid.Row="9"
                Width="80"
                HorizontalAlignment="Right"
                Click="OkButton_Click"
                Content="确定" />
        </Grid>
    </ScrollViewer>
</hc:Window>
