<Window
    x:Class="TodoOverlayApp.Views.ThemeSettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="主题配置"
    Width="400"
    Height="300"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Margin="0,0,0,10"
            FontSize="16"
            FontWeight="Bold"
            Text="应用主题" />

        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <TextBlock Margin="0,0,0,5" Text="选择主题：" />
            <ComboBox
                x:Name="ThemeComboBox"
                SelectedIndex="0"
                SelectionChanged="ThemeComboBox_SelectionChanged">
                <ComboBoxItem Content="浅色主题" />
                <ComboBoxItem Content="深色主题" />
            </ComboBox>
        </StackPanel>

        <TextBlock
            Grid.Row="2"
            Margin="0,0,0,10"
            FontSize="16"
            FontWeight="Bold"
            Text="主题颜色" />

        <WrapPanel x:Name="ColorsPanel" Grid.Row="3">
            <!--  这里将动态添加颜色按钮  -->
            <RadioButton
                Margin="5"
                Background="#2196F3"
                BorderBrush="#2196F3"
                Checked="ColorRadioButton_Checked"
                Foreground="#2196F3"
                GroupName="ThemeColors"
                Style="{StaticResource RadioButtonIcon}"
                Tag="#2196F3" />
            <RadioButton
                Margin="5"
                Background="#4CAF50"
                BorderBrush="#4CAF50"
                Checked="ColorRadioButton_Checked"
                Foreground="#4CAF50"
                GroupName="ThemeColors"
                Style="{StaticResource RadioButtonIcon}"
                Tag="#4CAF50" />
            <RadioButton
                Margin="5"
                Background="#FF5722"
                BorderBrush="#FF5722"
                Checked="ColorRadioButton_Checked"
                Foreground="#FF5722"
                GroupName="ThemeColors"
                Style="{StaticResource RadioButtonIcon}"
                Tag="#FF5722" />
            <RadioButton
                Margin="5"
                Background="#9C27B0"
                BorderBrush="#9C27B0"
                Checked="ColorRadioButton_Checked"
                Foreground="#9C27B0"
                GroupName="ThemeColors"
                Style="{StaticResource RadioButtonIcon}"
                Tag="#9C27B0" />
            <RadioButton
                Margin="5"
                Background="#FF9800"
                BorderBrush="#FF9800"
                Checked="ColorRadioButton_Checked"
                Foreground="#FF9800"
                GroupName="ThemeColors"
                Style="{StaticResource RadioButtonIcon}"
                Tag="#FF9800" />
        </WrapPanel>

        <Button
            Grid.Row="4"
            Width="80"
            HorizontalAlignment="Right"
            Click="OkButton_Click"
            Content="确定" />
    </Grid>
</Window>
