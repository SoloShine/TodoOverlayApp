<Window
    x:Class="TodoOverlayApp.Views.OverlayWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="clr-namespace:TodoOverlayApp.Models"
    xmlns:views="clr-namespace:TodoOverlayApp.Views"
    Title="待办事项"
    Width="300"
    Height="200"
    AllowsTransparency="True"
    Background="Transparent"
    MouseLeftButtonDown="Window_MouseLeftButtonDown"
    WindowStyle="None">
    <Window.Resources>
        <!--  递归模板 - 用于任意层级待办项  -->
        <HierarchicalDataTemplate
            x:Key="TodoItemTemplate"
            DataType="{x:Type models:TodoItem}"
            ItemsSource="{Binding SubItems}">
            <views:TodoItemControl />
        </HierarchicalDataTemplate>
    </Window.Resources>
    <Border
        x:Name="MainBorder"
        Background="AntiqueWhite"
        CornerRadius="10"
        Opacity="0.3">
        <DockPanel>
            <TextBlock
                Margin="5"
                HorizontalAlignment="Left"
                DockPanel.Dock="Top"
                Text="待办事项" />
            <TreeView
                Background="Transparent"
                DockPanel.Dock="Bottom"
                ItemsSource="{Binding TodoItems}">
                <TreeView.ItemTemplate>
                    <StaticResource ResourceKey="TodoItemTemplate" />
                </TreeView.ItemTemplate>
            </TreeView>
        </DockPanel>
    </Border>
</Window>
