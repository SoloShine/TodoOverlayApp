<Window
    x:Class="TodoOverlayApp.Views.EditAppWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="编辑应用配置"
    Width="450"
    Height="600"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <DockPanel>
            <!--  应用类型  -->
            <StackPanel Margin="0,0,0,10" DockPanel.Dock="Top">
                <TextBlock Margin="0,0,0,5" Text="应用类型:" />
                <CheckBox
                    x:Name="IsNonAppCheckBox"
                    Margin="0,5,0,0"
                    Content="普通待办集合（非软件关联）" />
            </StackPanel>

            <!--  应用名称  -->
            <StackPanel
                Grid.Row="1"
                Margin="0,10,0,10"
                DockPanel.Dock="Top">
                <TextBlock Margin="0,0,0,5" Text="名称:" />
                <TextBox x:Name="AppNameTextBox" Padding="5" />
            </StackPanel>

            <!--  应用路径  -->
            <StackPanel Margin="0,10,0,10" DockPanel.Dock="Top">
                <TextBlock Margin="0,0,0,5" Text="应用路径:" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox
                        x:Name="AppPathTextBox"
                        Grid.Column="0"
                        Padding="5" />
                    <Button
                        x:Name="SelectAppButton"
                        Grid.Column="1"
                        Margin="5,0,0,0"
                        Padding="8,3"
                        Content="选择软件" />
                </Grid>
            </StackPanel>

            <!--  描述信息  -->
            <DockPanel Margin="0,10,0,10" DockPanel.Dock="Bottom">
                <TextBlock
                    Margin="0,0,0,5"
                    DockPanel.Dock="Top"
                    Text="描述:" />
                <TextBox
                    x:Name="DescriptionTextBox"
                    Margin="0,5"
                    VerticalContentAlignment="Top"
                    AcceptsReturn="True"
                    DockPanel.Dock="Bottom"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Auto" />
            </DockPanel>
        </DockPanel>
        <!--  按钮  -->
        <StackPanel
            Grid.Row="1"
            Margin="5"
            HorizontalAlignment="Right"
            DockPanel.Dock="Bottom"
            Orientation="Horizontal">
            <Button
                x:Name="SaveButton"
                Width="80"
                Margin="0,0,10,0"
                Padding="0,3"
                Content="保存" />
            <Button
                x:Name="CancelButton"
                Width="80"
                Padding="0,3"
                Content="取消" />
        </StackPanel>
    </Grid>
</Window>
